<div class="container">
    {{> navbar}}

    <!-- BODY -->
    <div class="container main-area">
        <div class="container">
            <!-- Dropdown for Buildings -->
            <div class="form-floating">
                <div class="dropdown" style="z-index: 1001;">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="building-dropdown" data-bs-toggle="dropdown">
                        Choose building
                    </button>
                    <ul class="dropdown-menu w-100">
                        {{#each buildings}}
                            <li><a class="dropdown-item" onclick="selectItem(this)">{{this.name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div style="margin-bottom: 1em;"></div>

            <!-- Table for Rooms -->
            <div class="table-container-build">
                <div class="table-inner-build">
                    <div class="table-responsive table-striped">
                        <table class="table up-res-home table-hover">
                            <thead style="font-size: 15pt;">
                                <tr>
                                    <th style="font-size: 15.5pt;">Location</th>
                                    <th style="font-size: 15.5pt;">Room Number</th>
                                    <th style="font-size: 15.5pt;">Number of Seats</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each buildings}}
                                    {{#each this.rooms}}
                                        <tr class="clickable-row table-row-all-res" data-href="/room/{{../name}}/{{this}}" style="font-size: 12px;">
                                            <td>{{../name}}</td>
                                            <td>{{this}}</td>
                                            <td>{{../defaultSeats}}</td>
                                        </tr>
                                    {{/each}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- ADD ROOM Button (Hide for students in Phase 2) -->
        <button class="add-button-build">ADD ROOM</button>
    </div>
</div>
