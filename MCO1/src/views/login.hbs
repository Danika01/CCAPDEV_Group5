<div class="container">

    <!--NAVIGATION BAR-->
    <div class="container navigation sticky-top">
        <nav class="navbar navbar-expand">
            <div class="container-fluid">
            <ul class="navbar-nav">
                <a class="navbar-brand" href="/login">
                    <img src="..\Images\logo.png" alt="Logo" style="width: 200px; height: 50px;"> 
                </a>
                <div class="square" style="top: 0px;"></div>
                <div class="navContainer" style="flex-direction: row; position: absolute; right:120px;">
                    <div class="logIn-container" style="right:20px; position:relative;">
                        <textarea class="logIn-textbox" placeholder="EMAIL"></textarea>
                        <div class="circle-text-container">
                        
                            <div class="form-check d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" value="" id="rememberMe" style="scale: 0.5; margin-top: -5px;">
                                <label class="form-check-label loginLabel" for="checkbox2" style="margin-top: -5px;">
                                    Remember me
                                </label>
                            </div>
                        
                        </div>
                    </div>
                    <div class="logIn-container" style="right:10px; position:relative;">
                        <input class="logIn-textbox" type="password" id="password" placeholder="PASSWORD">
                        <div class="circle-text-container">
                            <a class="loginLabel" href="/login" style="text-decoration: none;" >Forgot password?</span>
                        </div>
                    </div>
                    <div class="logIn-container">
                        <a href="/home" class="logInButton">Login</a>
                        <button onclick="document.getElementById('signupModal').showModal();" class="logInButton">Sign Up</button>
                        <dialog style="height:550px; width: 500px; border-color: #b9b4a2; border-style: solid; border-width:10px;" id="signupModal">
                            <form method="dialog">
                                <div class="signUp-container">
                                    <img src="..\Images\x.png" style="position: absolute; width:40px; height:auto; left: 30px; cursor: pointer;" onclick="document.getElementById('signupModal').close();">                                        
                                    <img src="..\Images\ANIMO.png" style="width: 200px; height:auto;">
                                    <p>Create an account to make your reservations.</p>
                                    <div class="line"></div>
                                    <div class="nameSignup-container">
                                        <input class="name-field" type="text" placeholder="First Name">
                                        <input class="name-field" type="text" placeholder="Last Name">
                                    </div>             
                                    <input class="reg-field" type="email" placeholder="DLSU Email">
                                    <input class="reg-field" type="password" placeholder="Password">
                                    <input class="reg-field" type="password" placeholder="Confirm Password">
                                    <button style="width: 100px; height:30px; border-radius:30px; font-size:10px; font-weight: bold;" onclick="document.getElementById('successModal').showModal();">SIGN UP</button>
                                    <div class="line"></div>
                                    <a style="font-size: 10px; color:#423f32" href="/login">Sign up as a lab technician</a>
                                </div>
                                </form>
                        </dialog>
                        <dialog style="border-color: #b9b4a2; border-style: solid; border-width:10px;" id="successModal">
                            <form method="dialog">
                                <img src="..\Images\ANIMO.png" style="width: 200px; height:auto;">
                                <div class="line"></div>
                                <p style="padding: 20px;">Account Successfully Created!</p>
                                <div class="line" style="height:2.5px;"></div>
                                <a href="/home">
                                <button style="gap:20px; width:100px; height:30px; border-radius:30px; font-size:10px; font-weight: bold;">CLOSE</button>
                                </a>
                            </form>
                        </dialog>                                                        
                    </div>
                </div>
            </ul>
            </div>
        </nav>
    </div>

    <!--BODY-->
    <div class="body-container">
        <div>
            <img src="..\Images\lab2.png" alt="Lab Image" style="width: 655px; height: 615px;">
        </div>         
        <div class ="halfbody-container">
            <h1 style="color:#355f2e; padding-left: 175px; padding-top: 20px; font-style:bold; font-size: 50px;">Lab Reservation</h1>
            <div class="boxOuter" style="position: absolute; top: 100px; left: 155px; background-color: #cdcfc0; border-radius: 20px;">
                <p style="font-weight: bold; font-size: 20px; top:2px; text-align: center;">NEWS</p>
            </div>
            <div class="boxInner" style="position: absolute; top: 135px; left: 170px; background-color: #b9b4a2">
                <ul style="font-size: 20px; padding-top: 10px;">
                    {{#each announcements}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            
            <div class="boxOuter" style="position: absolute; top: 350px; left: 155px; background-color: #b9b4a2; border-radius: 20px;">
                <p style="font-weight: bold; font-size: 20px; top:2px; text-align: center;">UNAVAILABLE ROOMS</p>
            </div>
            <div class="boxInner" style="position: absolute; top: 385px; left: 170px; background-color: #cdcfc0;">
                {{#each unavailableRooms}}
                    <div class="boxUpdates" style="left: 10px;">
                        <div class="info-container">
                            <ul style="align-items: center; font-size: 12px;">
                                <li>{{this.room}}</li>
                            </ul>
                            <p style="font-size: 12px;">{{this.date}}</p>
                            <div class="{{this.status}}" style="font-size: 12px; bottom: 4px;">{{this.status}}</div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>   
    </div>      
</div>

{{> time}}
