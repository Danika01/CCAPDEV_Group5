<div class="container">
    <div class="main-area">
        {{> navbar}}

        <!-- BODY -->
        <div class="container edit-reservation">
            <div class="d-flex align-items-center">
                <a href="/reservations"> 
                    <i class="bi bi-arrow-left back-arrow"></i>
                </a>
                <h2 class="ms-3" id="edit-res-title" style="font-size: 3rem; font-weight: bolder;">Edit Reservation</h2>
            </div>
            
            <!-- RESERVATION CONTENT -->
            
                <div class="container edit-placeholder">
                    <div class="content-box justify-content-between">
                        <span class="value-name"> RESERVATION ID </span>
                        <span class="value" style="padding-right: 2%;" id="reservation-id"> {{reservation._id}} </span>
                    </div>
                    <div class="content-box justify-content-between">
                        <span class="value-name"> REQUEST DATE </span>
                        <span class="value" style="padding-right: 2%;"> {{reservation.requestDate}} </span>
                    </div>
                    <div class="content-box justify-content-between">
                        <span class="value-name"> DATE & TIME OF RESERVATION </span>
                        <span class="value" style="padding-right: 2%;"> 
                            {{reservation.reservationDate}} <br> <span>{{reservation.timeIn}} to {{reservation.timeOut}}</span> 
                        </span>
                    </div>
                    <div class="content-box justify-content-between">
                        <span class="value-name"> ROOM INFORMATION </span>
                        <span class="value"> {{reservation.seat.roomNum}} </span>
                    </div>
                    <div class="content-box justify-content-between">
                        <span class="value-name"> SEAT NUMBER </span>
                        <span class="value" style="padding-right: 12%;" id = "seatNum"> {{reservation.seat.seatNum}} </span>
                    </div>
                </div>

                <div class="container edit-placeholder buttons d-flex">
                    <div>
                        <input type="submit" class="btn btn-danger edit-res-btn" id="delete-reservation" value="Delete Reservation" data-bs-toggle="modal" data-bs-target="#deleteReservationModal">
                        <div class="modal fade" id="deleteReservationModal" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Reservation Deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete your reservation? This action cannot be undone.
                                    </div>
                                    <form action="/reservations/delete" method="POST">
                                        <input type="hidden" name="reservationId" value="{{reservation._id}}">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <form action="/edit-reservation" method="POST">
                        
                            <input type="hidden" name="room" value="{{reservation.room}}">
                            <input type="hidden" name="reservationId" value="{{reservation._id}}">
                            <input type="hidden" name="reservationDate" value="{{reservation.reservationDate}}">
                            <input type="hidden" name="startTime" value="{{reservation.startTime}}">
                            <input type="hidden" name="endTime" value="{{reservation.endTime}}">

                            <button type="submit" class="btn btn-success edit-res-btn" id="confirm-reservation">
                                Edit Reservation
                            </button>
                        </form>
                    </div>
                </div>
            
        </div>
    </div>
</div>
